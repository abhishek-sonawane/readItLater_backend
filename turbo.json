{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**",
                "dist/**"
            ]
        },
        "check-types": {
            "dependsOn": [
                "^check-types"
            ]
        },
        "lint":{
            "dependsOn": [
                "^lint"
            ]
        },
        "lint:fix":{
            "dependsOn": [
                "^lint:fix"
            ]
        },
        "dev": {
            "persistent": true,
            "cache": false,
            "dependsOn": [
                "^dev"
            ]
        }
    }
}